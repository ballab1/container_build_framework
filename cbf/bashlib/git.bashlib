#----------------------------------------------------------------------------------------------
function git.mainBranch()
{
    local master="$(git config --get core.branch)"
    [ -z "$master" ] && master='master'
    echo $master
}

#----------------------------------------------------------------------------------------------
function git.origin()
{
    local -r dir=${1:-.}

    cd "$dir"
    [ "${DEBUG_TRACE:-0}" = 0 ] || term.dlog 'git describe --tags --dirty --always\n' 'grey'
    local version=$(git describe --tags --dirty --always)

    [ "${DEBUG_TRACE:-0}" = 0 ] || term.dlog 'git ls-files --others --exclude-standard\n' 'grey'
    local -i untracked=$(git ls-files --others --exclude-standard | wc -l)


    if [ "$untracked" -gt 0 ]; then
        if [ "$version" = *dirty ]; then
            version="${version}+"
        else
            version="${version}-dirty-"
        fi
    fi
    echo "$version"
}
export -f git.origin

