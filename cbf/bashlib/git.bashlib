function git.cryptUnlock()
{
    local -r key=${1:-}

    if [ -z $(command -v git-crypt) ]; then
        term.elog 'Unable to locate "git-crypt"'
        return 1
    fi
    [ "${DEBUG_TRACE:-0}" = 0 ] || term.dlog 'git crypt unlock\n' 'grey'
    git crypt unlock ${key:-}
}
export -f git.cryptUnlock

