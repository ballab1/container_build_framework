{
    local -r commitid=${1:?}

    [ "${DEBUG_TRACE:-0}" = 0 ] || term.dlog "git checkout -q -f $commitid --"'\n' 'grey'
    GIT_LFS_SKIP_SMUDGE=1 git checkout -q -f "$commitid" --
    [ "${DEBUG_TRACE:-0}" = 0 ] || term.dlog 'git lfs pull\n' 'grey'
    git lfs pull
}
export -f git.populateWorkspace

