#!/bin/bash

#set -o xtrace
set -o errexit
set -o nounset 
#set -o verbose

declare NAME=${1:?'Input parameter "NAME" must be defined'} 
declare TZ="${2:-null}"

function getBase()
{
    if [ -d 'container_build_framework' ]; then
        echo -n 'container_build_framework' 
    else
        echo -n '..' 
    fi
}

# load our libraries
source "$( cd "$( dirname "${BASH_SOURCE[0]}" )/$( getBase )/cbf" && pwd )/cbf.bashlib"
cbf.__init

# build our container
cbf.buildContainer "$NAME" "$TZ"

