#!/bin/bash

#----------------------------------------------------------------------------------------------
#
#  general 'github' scripts
#
#----------------------------------------------------------------------------------------------

export http_code

#----------------------------------------------------------------------------------------------
function github.DELETE()
{
    github.io --request DELETE "$@" || return 1
}
export -f github.DELETE

#----------------------------------------------------------------------------------------------
function github.GET()
{
    github.io --request GET "$@" || return 1
}
export -f github.GET

#----------------------------------------------------------------------------------------------
