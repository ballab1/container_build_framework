#----------------------------------------------------------------------------------------------
function github.splitLinks()
{
    local -r headerFile=${1:?}

    grep -E '^Link:' "$headerFile" | sed -E 's|^Link:||'| awk '{print $0}' RS=','| sed -e 's| <|"|' -Ee 's|^(.*)>; rel=(.)(.*)\"\s*$|[\3]=\1\2|'
}
export -f github.splitLinks

