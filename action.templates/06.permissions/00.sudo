#!/bin/bash

declare -r SUDO=/usr/bin/sudo
if [ -e "$SUDO" ]; then
    chown root "$SUDO"
    chmod 4755 "$SUDO"
fi

declare -r SUDOERS=/etc/sudoers.d
if [ -d "$SUDOERS" ]; then
    declare files=( $( lib.getFiles "$SUDOERS" ) )

    if [ "${#files[*]}" -gt 0 ]; then
        for file in ${files[@]} ; do
            chown root:root "$file"
            chmod 600 "$file"
        done
    fi
fi