#!/bin/bash

source "${CBF['lib']}/cbf.bashlib"

declare -r SUDOERS=/etc/sudoers.d
declare files=( $( lib.getFiles "$SUDOERS" ) )
for file in ${files[@]} ; do
    chown root:root "$file"
    chmod 600 "$file"
done

declare -r SUDO=/usr/bin/sudo
if [ -e "$SUDO" ]; then
    chown root "$SUDO"
    chmod 4755 "$SUDO"
fi
