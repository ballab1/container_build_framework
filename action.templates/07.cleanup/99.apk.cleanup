#!/bin/bash

##########################################################
#
#  cleanup files in our cache
#
##########################################################


if [ "${CBF['os_id']}" = 'alpine' ]; then
    ( apk info .build-deps > /dev/null 2>&1 ) && apk del .build-deps

    declare -r cacheDir=/var/cache/apk
    declare -a files=( cbf.getFiles "$cacheDir" )

    [ ${#files[@]} -eq 0 ] || rm -rf "$cacheDir"/*
fi
